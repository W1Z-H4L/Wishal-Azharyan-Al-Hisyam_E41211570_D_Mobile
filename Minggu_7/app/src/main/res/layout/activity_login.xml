<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".login">


    <ImageView
        android:id="@+id/daun"
        android:layout_width="204dp"
        android:layout_height="277dp"


        android:layout_marginEnd="208dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/daunganja">


    </ImageView>


    <ImageView
        android:id="@+id/petani"
        android:layout_width="217dp"
        android:layout_height="252dp"

        android:layout_marginStart="200dp"
        android:layout_marginTop="504dp"


        android:alpha="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/spongebob">


    </ImageView>

    <androidx.cardview.widget.CardView

        android:id="@+id/cardViews2"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:background="@color/backgroun"

        android:foregroundGravity="center"
        app:cardBackgroundColor="@color/base"
        app:cardCornerRadius="25dp"
        app:cardMaxElevation="210dp"
        android:layout_marginBottom="100dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="318dp"
            android:layout_height="438dp"
            android:layout_gravity="center"
            android:alpha="1"
            android:foregroundGravity="center">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Masuk"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.219">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.143"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.351">

            </TextView>

            <EditText
                android:id="@+id/username"
                android:layout_width="242dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:background="@drawable/field"

                android:hint="Enter Username"

                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.419" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.146"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.531">

            </TextView>

            <EditText
                android:id="@+id/password"
                android:layout_width="242dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:background="@drawable/field"

                android:hint="Enter Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.622" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Punya Akun?"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.082"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.914"></TextView>

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparant"
                android:gravity="bottom|left"
                android:text="Daftar"

                android:textColor="@color/button"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.546"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.935"></Button>

            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/button"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Masuk"

                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.469"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.764" />


        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/bulet"
        android:layout_width="211dp"
        android:layout_height="156dp"
        android:alpha="0.54"
        app:srcCompat="@drawable/bulet"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-70dp"
        tools:layout_editor_absoluteY="217dp">


    </ImageView>

    <ImageView
        android:id="@+id/bulet2"
        android:layout_width="139dp"
        android:layout_height="126dp"
        android:alpha="0.54"
        app:srcCompat="@drawable/bulet"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-23dp"
        tools:layout_editor_absoluteY="-56dp">


    </ImageView>

    <ImageView
        android:id="@+id/bulet3"
        android:layout_width="69dp"
        android:layout_height="76dp"
        android:alpha="0.54"
        app:srcCompat="@drawable/bulet"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="29dp">
    </ImageView>

    <ImageView
        android:id="@+id/bulet4"
        android:layout_width="88dp"
        android:layout_height="116dp"
        android:alpha="0.54"
        app:srcCompat="@drawable/bulet"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="348dp"
        tools:layout_editor_absoluteY="170dp">
    </ImageView>

    <ImageView
        android:id="@+id/bulet5"
        android:layout_width="131dp"
        android:layout_height="184dp"
        android:alpha="0.54"
        app:srcCompat="@drawable/bulet"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="354dp">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>